trainlist = list()
def bulit_array(obj, label):
    traingroup = np.split(obj, list(np.unique(label)))
    for ind in unique(obj):
        trainlist.append(split_array(traingroup[ind]))
    trainarray = np.array(trainlist)
    return(trainarray)
    
